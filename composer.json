{
  "require": {
    "silex/silex": "~1.2",
    "guzzlehttp/guzzle": "*",
    "symfony/yaml":"~2.4",
    "symfony/config":"~2.4",
    "deralex/yaml-config-service-provider": "~1.0"
  },
  "require-dev": {
    "phpunit/phpunit": "~4.4",
    "satooshi/php-coveralls": "v0.6.1",
    "symfony/browser-kit": "~2"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "bin-dir": "bin/"
  },
  "autoload": {
    "psr-4" : { "API\\": "src/" }
  },
  "autoload-dev": {
    "psr-4" : { "API\\Tests\\": "tests/" }
  }
}
